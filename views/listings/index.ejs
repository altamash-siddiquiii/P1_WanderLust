<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <!-- <h3 class="mt-3 mb-3">All Listings</h3> -->
        <div class="filters">
            <div class="filter">
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-bed"></i>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-mountain-city"></i>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-mountain"></i>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <i class="fa-brands fa-fort-awesome"></i>
                <p>Castles</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Amazing Pools</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-campground"></i>
                <p>Camping</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-cow"></i>
                <p>Farms</p>
            </div>
            <div class="filter">
                <i class="fa-regular fa-snowflake"></i>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-igloo"></i>
                <p>Domes</p>
            </div>
            <div class="filter">
                <i class="fa-solid fa-ship"></i>
                <p>Boats</p>
            </div>
            <div class="tax-toggler">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>
        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 mt-3">
            <% for (listing of allListings) { %>
                <a href="/listings/<%=listing._id%>" class="listing-img-link">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing image"
                            style="height: 20rem;">
                        <div class="card-img-overlay">
                            <!-- <h5 class="card-title"><%=listing.title%></h5>
                            <p class="card-text"><%=listing.description%></p> -->
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b>
                                <br>
                                &#8377;
                                <span class="listing-price" data-original-price="<%=listing.price%>">
                                    <%= listing.price.toLocaleString(`en-IN`) %>
                                </span>
                                / night
                                <i class="tax-info" style="display: none;"> &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
        <script>
            let taxSwitch = document.getElementById("flexSwitchCheckDefault");
            let taxInfoElmnts = document.querySelectorAll(".tax-info");
            let priceElmnts = document.querySelectorAll(".listing-price");

            taxSwitch.addEventListener("click", () => {
                priceElmnts.forEach((priceElmnt, idx) => {
                    let originalPrice = parseInt(priceElmnt.getAttribute("data-original-price"));
                    
                    if (taxSwitch.checked) {
                        let newPrice = originalPrice * 1.18; // originalPrice+originalPrice*18/100
                        
                        priceElmnt.textContent = newPrice.toLocaleString("en-IN");
                        taxInfoElmnts[idx].style.display = "inline";
                    } else {
                        priceElmnt.textContent = originalPrice.toLocaleString("en-IN");
                        taxInfoElmnts[idx].style.display = "none";
                    }
                });
            });

            let filterCategories = document.getElementsByClassName("filter");
            let activeCategory = "<%= typeof category !== 'undefined' ? category : '' %>";

            for (let filterCategory of filterCategories) {
                let category = filterCategory.querySelector('p').innerText;

                if (category === activeCategory) {
                    filterCategory.classList.add("activeCategory");
                }
                filterCategory.addEventListener("click", () => {
                    window.location.href = `/listings/category/${category}`;
                });
            }
        </script>
    </body>