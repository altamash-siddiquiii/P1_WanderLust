<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3 mb-3">
        <div class="col-6 offset-3">
            <h2 class="mt-3 mb-3 text-center">SignUp</h2>
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" id="username" name="username" placeholder="Username" class="form-control" required>
                    <div class="invalid-feedback">Please provide a username</div>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" id="email" name="email" placeholder="Email" class="form-control" required>
                    <div class="invalid-feedback">Please provide an email address</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" id="password" name="password" placeholder="Password" class="form-control" required>
                    <div class="invalid-feedback">Please provide a strong password</div>
                </div>
                <div class="mb-2">
                    <button class="btn btn-primary signup-btn">SignUp</button>
                </div>
                <a href="/login" class="auth-link">Already have an account? Log in</a>
            </form>
        </div>
    </div>
</body>