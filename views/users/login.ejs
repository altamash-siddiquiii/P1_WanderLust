<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3 mb-3">
        <div class="col-6 offset-3">
            <h2 class="mt-3 mb-3 text-center">Login</h2>
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" id="username" name="username" placeholder="Username" class="form-control" required>
                    <!-- <div class="invalid-feedback">Please enter a correct username</div> -->
                </div>
                <div class="mb-0">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" id="password" name="password" placeholder="Password" class="form-control" required>
                    <!-- <div class="invalid-feedback">Please enter a correct password</div> -->
                </div>
                <a href="#" class="auth-link">Forgot password?</a>
                <div class="mb-2 mt-2">
                    <button class="btn btn-primary login-btn"><b>Login</b></button>
                </div>
                <a href="/signup" class="auth-link">Don't have an account? Sign up</a>
            </form>
        </div>
    </div>
</body>